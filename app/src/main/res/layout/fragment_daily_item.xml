<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100sp"
    android:orientation="horizontal"
    android:weightSum="16"
    android:background="#EBEBEB">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:padding="8sp">

        <TextView android:id="@+id/weather_daily_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FRI"
            android:textSize="26sp"
            android:lines="1"
            android:layout_gravity="center" />


    </LinearLayout>
    <ImageView android:id="@+id/img_daily"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:src="@drawable/art_clear"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:padding="16sp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center"
        android:paddingTop="5sp">

        <TextView android:id="@+id/weather_daily_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21&#xb0; - 26&#xb0;"
            android:textSize="30sp"
            android:gravity="center"/>
        <TextView android:id="@+id/weather_daily_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OVERCAST CLOUDS"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>